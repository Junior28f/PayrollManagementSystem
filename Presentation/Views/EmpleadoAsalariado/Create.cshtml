@model PayrollManagementSystem.Models.EmpleadoAsalariado.EmpleadoAsalariadoModel

@{
ViewData["Title"] = "Crear Empleado Asalariado";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">➕ Crear Nuevo Empleado Asalariado</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Apellido" class="form-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TipoDeEmpleado" class="form-label"></label>
                <input asp-for="TipoDeEmpleado" class="form-control" />
                <span asp-validation-for="TipoDeEmpleado" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SalarioSemanal" class="form-label"></label>
                <input asp-for="SalarioSemanal" class="form-control" />
                <span asp-validation-for="SalarioSemanal" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Activo" />
                <label class="form-check-label" asp-for="Activo">
                    @Html.DisplayNameFor(model => model.Activo)
                </label>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success"> Guardar</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
