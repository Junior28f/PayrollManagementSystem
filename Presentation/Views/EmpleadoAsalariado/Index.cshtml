@model List<PayrollManagementSystem.Models.EmpleadoAsalariado.EmpleadoAsalariadoModel>

@{
    ViewData["Title"] = "Listado de Empleados Asalariados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Reporte Semanal de Empleados Asalariados</h1>

<p>
<a asp-action="Create" style="background-color: #007BFF; color: white; padding: 5px 10px; text-decoration: none; border-radius: 3px;">
    Crear nuevo empleado
</a>
@if (!Model.Any())
{
    <p>No hay empleados registrados aún.</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model[0].NumeroDeSeguro)</th>
            <th>@Html.DisplayNameFor(model => model[0].Nombre)</th>
            <th>@Html.DisplayNameFor(model => model[0].Apellido)</th>
            <th>@Html.DisplayNameFor(model => model[0].TipoDeEmpleado)</th>
            <th>@Html.DisplayNameFor(model => model[0].SalarioSemanal)</th>
            <th>@Html.DisplayNameFor(model => model[0].Activo)</th>
            <th>@Html.DisplayNameFor(model => model[0].PagoSemanal)</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NumeroDeSeguro</td>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>
                <td>@item.TipoDeEmpleado</td>
                <td>@item.SalarioSemanal.ToString("C")</td>
                <td>@(item.Activo ? "Activo" : "Inactivo")</td>
                <td>@item.CalcularPago().ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.NumeroDeSeguro">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.NumeroDeSeguro">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.NumeroDeSeguro">Desactivar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}