@model List<PayrollManagementSystem.Models.EmpleadoPorComision.EmpleadoPorComisionModel>

@{
    ViewData["Title"] = "Reporte Semanal de Empleados por Comisión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4"> Reporte Semanal de Empleados por Comisión</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        ➕ Crear nuevo empleado
    </a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No hay empleados registrados aún.
    </div>
}
else
{
    <table class="table table-hover table-bordered">
        <thead class="table-dark text-center">
            <tr>
                <th>@Html.DisplayNameFor(model => model[0].NumeroDeSeguro)</th>
                <th>@Html.DisplayNameFor(model => model[0].Nombre)</th>
                <th>@Html.DisplayNameFor(model => model[0].Apellido)</th>
                <th>@Html.DisplayNameFor(model => model[0].TipoDeEmpleado)</th>
                <th>@Html.DisplayNameFor(model => model[0].VentasBrutas)</th>
                <th>@Html.DisplayNameFor(model => model[0].TarifaPorComision)</th>
                <th>@Html.DisplayNameFor(model => model[0].Activo)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center align-middle">
                    <td>@item.NumeroDeSeguro</td>
                    <td>@item.Nombre</td>
                    <td>@item.Apellido</td>
                    <td>@item.TipoDeEmpleado</td>
                    <td>@item.VentasBrutas.ToString("C")</td>
                    <td>@item.TarifaPorComision.ToString("P")</td>
                    <td>
                        @if (item.Activo)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactivo</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.NumeroDeSeguro" class="btn btn-sm btn-warning me-1" title="Editar">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.NumeroDeSeguro" class="btn btn-sm btn-info me-1" title="Detalles">Detalles</a>
                        <a asp-action="Disable" asp-route-id="@item.NumeroDeSeguro" class="btn btn-sm btn-danger" title="Desactivar">Desactivar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
